<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/choosebackground"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="50dp"
        layout="@layout/header" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="5dp"
        android:padding="20dp"
        android:text="@string/msg_update_data_prompt"
        android:textColor="#505050"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp" >

        <TextView
            android:id="@+id/lbl_curr_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/msg_curr_shop"
            android:textColor="#505050"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/curr_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text=""
            android:textColor="@color/my_orange"
            android:textSize="17sp" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/msg_download_picture"
        android:textColor="#505050"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_update_data"
        android:layout_width="150dip"
        android:layout_height="40dip"
        android:background="@drawable/longchoosebutton"
        android:onClick="updateData"
        android:text="@string/btn_update_data"
        android:textColor="@drawable/choosebuttontext" />

</LinearLayout>